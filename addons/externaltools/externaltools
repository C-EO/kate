[Global]
tools=10
version=1

[Tool 0]
actionName=externaltool_RunShellScript
arguments=-e sh -c "cd %{CurrentDocument:Path} && pwd && chmod -vc a+x %{CurrentDocument:FileName} && ./%{CurrentDocument:FileName} ; echo Press any key to continue. && read -n 1"
category=
cmdname=run-script
executable=konsole
icon=system-run
input=
mimetypes=
name=Run Shell Script
output=Ignore
reload=false
save=CurrentDocument
workingDir=%{CurrentDocument:Path}

